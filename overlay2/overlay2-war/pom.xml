<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>overlay2</artifactId>
        <groupId>org.mca</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <artifactId>overlay2-war</artifactId>
    <name>overlay2 :: war (jetty)</name>

    <packaging>war</packaging>

    <dependencies>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.mca</groupId>
            <artifactId>common</artifactId>
        </dependency>
        <dependency>
            <groupId>org.mca</groupId>
            <artifactId>overlay1-war</artifactId>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.mca</groupId>
            <artifactId>module-c-war</artifactId>
            <type>war</type>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>runOverlay2</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.eclipse.jetty</groupId>
                        <artifactId>jetty-maven-plugin</artifactId>
                        <configuration>
                            <skip>false</skip>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>overlay2WithDefaults</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-war-plugin</artifactId>
                        <configuration>
                            <overlays>
                                <overlay/>
                                <overlay>
                                    <groupId>org.mca</groupId>
                                    <artifactId>overlay1-war</artifactId>
                                </overlay>
                                <overlay>
                                    <groupId>org.mca</groupId>
                                    <artifactId>module-c-war</artifactId>
                                </overlay>
                            </overlays>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>overlay2WithExcludes</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-war-plugin</artifactId>
                        <configuration>
                            <overlays>
                                <overlay/>
                                <overlay>
                                    <groupId>org.mca</groupId>
                                    <artifactId>overlay1-war</artifactId>
                                    <excludes>
                                        <exclude>WEB-INF/lib/*api*</exclude>
                                    </excludes>
                                </overlay>
                                <overlay>
                                    <groupId>org.mca</groupId>
                                    <artifactId>module-c-war</artifactId>
                                </overlay>
                            </overlays>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>overlay2WithTargetPath</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-war-plugin</artifactId>
                        <configuration>
                            <overlays>
                                <overlay/>
                                <overlay>
                                    <groupId>org.mca</groupId>
                                    <artifactId>overlay1-war</artifactId>
                                    <targetPath>moved-overlay1</targetPath>
                                </overlay>
                                <overlay>
                                    <groupId>org.mca</groupId>
                                    <artifactId>module-c-war</artifactId>
                                </overlay>
                            </overlays>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
